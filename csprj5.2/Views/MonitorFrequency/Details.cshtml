@model csprj5._2.Models.MonitorFrequency

@{
    ViewData["Title"] = "Details";
}

<h1>Monitor Frequency Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DelayInSecs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DelayInSecs)
        </dd>
    </dl>
</div>

@if (Model.MonitoredFiles.Count() == 0)
            {
                <div>
                    <span>There are no monitored files using this frequency</span>
                </div>
}
else {
    foreach (var item in Model.MonitoredFiles)
                {
                    <a>@item.Name</a>
                }
} 
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>